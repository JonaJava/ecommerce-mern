{
  "version": 2,
  "builds": [
    {
      "src": "./app.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // Ruta para servir el archivo index.html
    {
      "src": "/",
      "dest": "/build/index.html"
    },
    // Ruta para servir otros archivos est√°ticos
    {
      "src": "/(.*)",
      "dest": "/build/$1",
      "methods": ["GET", "HEAD"]
    },
    // Ruta para manejar solicitudes API
    {
      "src": "/(product|brand|category|user|cart|orders|auth)(.*)",
      "dest": "app.js"
    }
  ]
}
